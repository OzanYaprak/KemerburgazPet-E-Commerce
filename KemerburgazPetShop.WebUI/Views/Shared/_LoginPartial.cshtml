@using Microsoft.AspNetCore.Identity
@using KemerburgazPetShop.WebUI.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<div class="navbar-nav align-items-end justify-content-end">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="col-md-3 d-lg-block d-none">
            <div class="announcement-meta-wrapper d-flex align-items-center justify-content-end">
                <div class="announcement-meta d-flex align-items-center">
                    <a class="announcement-login text-white text-center" id="manage" title="Manage" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <span>Merhaba: @UserManager.GetUserName(User)</span>
                    </a>

                    <span class="separator-login d-flex px-3">
                        <svg width="2" height="9" viewBox="0 0 2 9" fill="none"
                             xmlns="http://www.w3.org/2000/svg">
                            <path opacity="0.4" d="M1 0.5V8.5" stroke="#FEFEFE" stroke-linecap="round" />
                        </svg>
                    </span>


                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-light">Çıkış</button>
                    </form>

                </div>
            </div>
        </div>

