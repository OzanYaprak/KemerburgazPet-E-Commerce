@model IndexViewModels
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="m-4 text-center">Sistemdeki Ürünler</h3>


@if (Model.Products.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <td class="fw-bold bg-light">ID</td>
                <td class="fw-bold bg-light">Name</td>
                <td class="fw-bold bg-light">Price</td>
                <td class="fw-bold bg-light">Image</td>
                <td class="fw-bold bg-light"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice</td>
                    <td>
                        <img src="~/Bisum/assets/img/products/hills/@product.ImageURL" width="80" />
                    </td>
                    <td>
                        <a class="btn btn-secondary active me-2" href="/admin/products/@product.ProductID">Düzenle</a>

                        <form asp-controller="Admin" asp-action="DeleteProduct" method="post" style="display:inline;">
                            <input type="hidden" name="productID" value="@product.ProductID" />
                            <button type="submit" class="btn btn-secondary active">Sil</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
        <tr>
            <td></td>
        </tr>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}



