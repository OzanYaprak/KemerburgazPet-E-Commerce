@model CategoryViewModel
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
<h3 class="m-4 text-center">Kategori Ekleme</h3>

<div class="row justify-content-center align-items-center">
    <div class="col-md-6 col-sm-2">
        <form asp-controller="Admin" asp-action="CreateCategory" method="post">
            <div class="form-group-row">
                <label asp-for="CategoryName" class="col-md-2 col-form-label">Kategori Adı</label>
                <div class="col-md-10">
                    <input asp-for="CategoryName" class="form-control" />
                </div>
            </div>

            <div class="form-group-row ">
                <div class="col-md-10 mt-3">
                    <button class="btn btn-secondary active" type="submit" value="Save Product">Kaydet</button>
                    <a asp-controller="Admin" asp-action="CreateCategory" class="btn btn-secondary active ms-2">Sıfırla</a>
                </div>
            </div>
        </form>
    </div>
</div>
</div>

